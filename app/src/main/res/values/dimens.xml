<?xml version="1.0" encoding="utf-8"?>
<!--
    dimens.xml - Dimension resources for the Bingo Game application
    
    This file contains all dimension values used throughout the app for
    consistent spacing, sizing, and layout across different screens.
    
    Categories:
    - Title dimensions
    - Grid layout dimensions
    - Bingo cell dimensions
    - Button dimensions
    
    These are default values for standard 16:9 screens (like Nexus 5).
    Alternative dimension files exist for different screen sizes and orientations.
-->
<resources>
    <!-- ========== Title Dimensions ========== -->
    <!-- Text size for the "BINGO CARD" title -->
    <dimen name="title_text_size">24sp</dimen>
    
    <!-- Top margin for title, spacing it from the toolbar -->
    <dimen name="title_margin_top">16dp</dimen>
    
    <!-- ========== Grid Layout Dimensions ========== -->
    <!-- Horizontal margin on left and right sides of the Bingo grid -->
    <dimen name="grid_margin_horizontal">16dp</dimen>
    
    <!-- Top margin for grid, spacing it from the title -->
    <dimen name="grid_margin_top">16dp</dimen>
    
    <!-- Bottom margin for grid, spacing it from the action button -->
    <dimen name="grid_margin_bottom">16dp</dimen>
    
    <!-- ========== Bingo Cell Dimensions ========== -->
    <!-- Text size for BINGO header letters (B-I-N-G-O) -->
    <dimen name="bingo_header_text_size">20sp</dimen>
    
    <!-- Text size for numbers inside Bingo cells -->
    <dimen name="bingo_cell_text_size">18sp</dimen>
    
    <!-- Text size for the "FREE" center cell -->
    <dimen name="bingo_free_text_size">16sp</dimen>
    
    <!-- Margin between each cell in the grid -->
    <dimen name="cell_margin">2dp</dimen>
    
    <!-- ========== Button Dimensions ========== -->
    <!-- Horizontal margin on left and right sides of buttons -->
    <dimen name="button_margin_horizontal">32dp</dimen>
    
    <!-- Bottom margin for buttons from screen edge -->
    <dimen name="button_margin_bottom">24dp</dimen>
    
    <!-- Text size for button labels -->
    <dimen name="button_text_size">16sp</dimen>
</resources>
