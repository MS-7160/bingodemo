                android:gravity="center"
                android:textSize="@dimen/bingo_cell_text_size"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/cell_2_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/bingo_free"
                android:gravity="center"
                android:textSize="@dimen/bingo_free_text_size"
                android:textStyle="bold"
                android:background="@drawable/bingo_cell_selected"
                android:layout_margin="@dimen/cell_margin"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/cell_2_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/default_number"
                android:gravity="center"
                android:textSize="@dimen/bingo_cell_text_size"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/cell_2_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/default_number"
                android:gravity="center"
                android:textSize="@dimen/bingo_cell_text_size"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Row 4 - Fourth row of Bingo numbers (cells 3,0 to 3,4) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cell_3_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/default_number"
                android:gravity="center"
                android:textSize="@dimen/bingo_cell_text_size"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/cell_3_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/default_number"
                android:gravity="center"
                android:textSize="@dimen/bingo_cell_text_size"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/cell_3_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/default_number"
                android:gravity="center"
                android:textSize="@dimen/bingo_cell_text_size"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/cell_3_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/default_number"
                android:gravity="center"
                android:textSize="@dimen/bingo_cell_text_size"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/cell_3_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/default_number"
                android:gravity="center"
                android:textSize="@dimen/bingo_cell_text_size"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Row 5 - Fifth row of Bingo numbers (cells 4,0 to 4,4) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cell_4_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/default_number"
                android:gravity="center"
                android:textSize="@dimen/bingo_cell_text_size"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/cell_4_1"
