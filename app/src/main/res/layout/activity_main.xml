<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_main.xml - Main Bingo Game Screen Layout
    
    This layout implements the main Bingo game interface using ConstraintLayout
    for flexible positioning and LinearLayouts for the grid structure.
    
    Layout Structure:
    1. MaterialToolbar - App title bar at the top
    2. Title TextView - "BINGO CARD" heading
    3. Bingo Grid (LinearLayout) - 6 rows total:
       - Row 0: BINGO header (B-I-N-G-O letters)
       - Rows 1-5: 5x5 grid of clickable number cells
         * Each cell is a TextView with ID pattern: cell_[row]_[col]
         * Center cell (2,2) is the FREE space (always marked)
         * Numbers are generated dynamically by MainActivity.kt
    4. Action Button - "Generate New Card" button
    5. Config Button - "Change Password" button (purple background)
    
    Grid Layout:
    - Column B: Numbers 1-15
    - Column I: Numbers 16-30
    - Column N: Numbers 31-45 (with FREE at center)
    - Column G: Numbers 46-60
    - Column O: Numbers 61-75
    
    Interaction:
    - Cells can be clicked to toggle selection (changes background)
    - Generate New Card button creates new random numbers
    - Change Password button navigates to ConfigActivity
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Toolbar at the top showing app name -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- "BINGO CARD" title text centered below toolbar -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bingo_title"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/title_margin_top"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Round information display showing player name and round number -->
    <TextView
        android:id="@+id/roundInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player: User | Round: 1"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 
        Main Bingo grid container - holds 6 rows (header + 5 data rows)
        Uses nested LinearLayouts for consistent cell sizing
        Displays player info and round number above the grid
    -->
    <LinearLayout
        android:id="@+id/bingoGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/grid_margin_horizontal"
        android:layout_marginEnd="@dimen/grid_margin_horizontal"
        android:layout_marginTop="@dimen/grid_margin_top"
        android:layout_marginBottom="@dimen/grid_margin_bottom"
        app:layout_constraintTop_toBottomOf="@id/roundInfoTextView"
        app:layout_constraintBottom_toTopOf="@id/actionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintHeight_default="spread">

        <!-- BINGO Header Row - Displays the letters B-I-N-G-O -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- B column header -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/bingo_header_b"
                android:gravity="center"
                android:textSize="@dimen/bingo_header_text_size"
                android:textStyle="bold"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin" />

            <!-- I column header -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/bingo_header_i"
                android:gravity="center"
                android:textSize="@dimen/bingo_header_text_size"
                android:textStyle="bold"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin" />

            <!-- N column header -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/bingo_header_n"
                android:gravity="center"
                android:textSize="@dimen/bingo_header_text_size"
                android:textStyle="bold"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin" />

            <!-- G column header -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/bingo_header_g"
                android:gravity="center"
                android:textSize="@dimen/bingo_header_text_size"
                android:textStyle="bold"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin" />

            <!-- O column header -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/bingo_header_o"
                android:gravity="center"
                android:textSize="@dimen/bingo_header_text_size"
                android:textStyle="bold"
                android:background="@drawable/bingo_cell_border"
                android:layout_margin="@dimen/cell_margin" />
        </LinearLayout>

        <!-- Row 1 - First row of Bingo numbers (cells 0,0 to 0,4) -->
