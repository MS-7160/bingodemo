<?xml version="1.0" encoding="utf-8"?>
<!--
    bingo_cell_border.xml - Default background for Bingo grid cells
    
    This drawable defines the appearance of unselected Bingo cells.
    Used for all cells except the selected ones and the FREE space.
    
    Properties:
    - Rectangle shape with rounded corners (4dp radius)
    - White solid background (#FFFFFF)
    - Gray border stroke (2dp width, #666666 color)
    
    This is the default state before a cell is clicked/marked.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Gray border around the cell -->
    <stroke
        android:width="2dp"
        android:color="#666666" />
    <!-- White background fill -->
    <solid android:color="#FFFFFF" />
    <!-- Rounded corners -->
    <corners android:radius="4dp" />
</shape>
